{
  "name": "transactional-supabase-foobar",
  "version": "1.0.0",
  "description": "Transactional business logic API with Drizzle ORM",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "ufa:dev": "./scripts/dev-startup.sh",
    "ufa:dev:clean": "pnpm db:stop",
    "build": "tsc",
    "dev": "./scripts/dev-startup.sh",
    "dev:fastify": "SUPABASE_CLI=true pnpm tsx watch src/server.ts",
    "dev:migrate": "SUPABASE_CLI=true pnpm run db:migrate",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "pnpm tsx src/scripts/migrate.ts",
    "db:start": "pnpm supabase start",
    "db:stop": "pnpm supabase stop",
    "db:reset": "pnpm supabase db reset",
    "db:status": "pnpm supabase status",
    "setup:replication": "pnpm tsx database/scripts/setup-replication.ts",
    "setup:replication:status": "pnpm tsx database/scripts/setup-replication.ts --status",
    "replication:stop": "pnpm tsx database/scripts/teardown-replication.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "2.0.0-beta.10",
    "@ai-sdk/openai": "2.0.0-beta.12",
    "@fastify/cors": "^10.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@workspace/models": "workspace:*",
    "ai": "5.0.0-beta.28",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1",
    "fastify": "^5.4.0",
    "pg": "^8.11.3",
    "pino-pretty": "^13.0.0",
    "zod": "^3.22.4",
    "@supabase/realtime-js": "^2.10.2",
    "@supabase/supabase-js": "^2.39.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "supabase": "^2.31.8",
    "drizzle-kit": "^0.20.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "fastify",
    "drizzle",
    "orm",
    "api",
    "transactional"
  ],
  "author": "",
  "license": "MIT"
}
