{
  "name": "transactional-supabase-foobar",
  "version": "1.0.0",
  "description": "Transactional business logic API with Drizzle ORM",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "ufa:dev": "./scripts/dev-startup.sh",
    "ufa:dev:clean": "pnpm db:stop",
    "build": "pnpm clean && tsc && pnpm build:copy-env",
    "build:copy-env": "[ -f .env.production ] && cp .env.production dist/ || echo 'Warning: .env.production file is missing. Ensure it exists if required.'",
    "dev": "./scripts/dev-startup.sh",
    "dev:fastify": "SUPABASE_CLI=true pnpm tsx watch src/server.ts",
    "dev:migrate": "SUPABASE_CLI=true pnpm run db:migrate",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "pnpm tsx src/scripts/migrate.ts",
    "db:migrate:check": "drizzle-kit check",
    "db:start": "pnpm supabase start",
    "db:stop": "pnpm supabase stop || echo 'Note: supabase stop failed (may not be running)'",
    "db:reset": "pnpm supabase db reset",
    "db:status": "pnpm supabase status",
    "setup:replication": "pnpm tsx database/scripts/setup-replication.ts",
    "setup:replication:status": "pnpm tsx database/scripts/setup-replication.ts --status",
    "replication:stop": "pnpm tsx database/scripts/teardown-replication.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "catalog:",
    "@ai-sdk/openai": "catalog:",
    "@fastify/cors": "catalog:",
    "@fastify/swagger": "catalog:",
    "@fastify/swagger-ui": "catalog:",
    "@workspace/models": "workspace:*",
    "ai": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "fastify": "catalog:",
    "pg": "catalog:",
    "pino-pretty": "catalog:utils",
    "zod": "catalog:",
    "@supabase/realtime-js": "catalog:",
    "@supabase/supabase-js": "catalog:",
    "ws": "catalog:utils"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/pg": "catalog:utils",
    "@types/ws": "catalog:utils",
    "supabase": "catalog:utils",
    "drizzle-kit": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:dev-tools-v5-3"
  },
  "keywords": [
    "fastify",
    "drizzle",
    "orm",
    "api",
    "transactional"
  ],
  "author": "",
  "license": "MIT"
}
