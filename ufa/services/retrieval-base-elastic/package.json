{
  "name": "retrieval-base",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm es:start && PORT=8086 pnpm exec tsx watch src/server.ts",
    "ufa:dev": "pnpm es:start && PORT=8086 pnpm exec tsx watch src/server.ts",
    "dev:server-only": "SKIP_ES_WAIT=true PORT=8086 pnpm exec tsx watch src/server.ts",
    "dev:quick": "PORT=8086 pnpm exec tsx src/server.ts",
    "dev:8083": "PORT=8083 pnpm exec tsx src/server.ts",
    "start": "PORT=8086 pnpm exec tsx src/server.ts",
    "ufa:dev:clean": "pnpm es:stop",
    "build": "tsc",
    "lint": "eslint src/",
    "es:start": "docker compose up -d && ./scripts/es-wait.sh && pnpm es:init-indices",
    "es:stop": "docker compose down",
    "es:reset": "docker compose down -v && docker compose up -d && ./scripts/es-wait.sh && pnpm es:init-indices",
    "es:status": "./scripts/es-status.sh",
    "es:init-indices": "pnpm exec tsx src/scripts/init-indices.ts",
    "kill-port": "lsof -ti :8086 | xargs kill -9 || echo 'No process on port 8086'"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@workspace/models": "workspace:*",
    "fastify": "^5.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.10.4",
    "eslint": "^8.57.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
