{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "tailwindCSS.experimental.configFile": {
    "/ufa/apps/application-frontend/src/index.css": "ufa/apps/application-frontend/src/**",
    "/ufa/packages/ui/src/styles/globals.css": "ufa/packages/ui/src/**"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "css.validate": false,
  "css.customData": [".vscode/tailwindcss.json"],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "class:list",
    ".*[Ss]tyles.*",
    ".*[Cc]lasses.*"
  ]
}
