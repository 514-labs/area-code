{
  "name": "@workspace/transactional-base",
  "version": "1.0.0",
  "description": "Self-hosted Supabase for transactional workloads",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "npx tsx watch src/server.ts",
    "dev:migrate": "pnpm run db:migrate",
    "setup": "../../scripts/dev-setup.sh --service=transactional-base",
    "setup:force": "../../scripts/dev-setup.sh --service=transactional-base --force",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "shutdown": "../../scripts/dev-shutdown.sh transactional-base",
    "db:start": "docker compose up -d",
    "db:stop": "sh setup.sh --stop",
    "db:restart": "sh setup.sh --restart",
    "db:reset": "sh setup.sh --reset",
    "db:reset:full": "sh setup.sh --reset-secrets",
    "db:status": "sh setup.sh --status",
    "db:logs": "sh setup.sh --logs",
    "db:seed": "sh setup.sh --seed",
    "db:reset:seed": "sh setup.sh --reset --seed",
    "db:help": "sh setup.sh --help",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "npx tsx src/scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "test:realtime": "node dist/test-realtime.js",
    "test:realtime:dev": "npx tsx tests/test-realtime.ts",
    "test:postgres-changes": "node dist/test-realtime-postgres-changes.js",
    "test:postgres-changes:dev": "npx tsx tests/test-realtime-postgres-changes.ts",
    "setup:replication": "npx tsx src/scripts/setup-replication.ts",
    "setup:replication:status": "npx tsx src/scripts/setup-replication.ts --status"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@supabase/realtime-js": "^2.10.2",
    "@supabase/supabase-js": "^2.39.1",
    "@workspace/models": "workspace:*",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1",
    "fastify": "^5.4.0",
    "pg": "^8.11.3",
    "pino-pretty": "^13.0.0",
    "ws": "^8.18.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.20.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "supabase",
    "realtime",
    "self-hosted",
    "docker"
  ],
  "author": "",
  "license": "MIT"
}
