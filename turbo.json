{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "build:styles": {
      "outputs": ["dist/**"]
    },
    "lint": {},
    "ufa:dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["ufa:dev:setup"]
    },

    "ufa:dev:setup": {
      "cache": false,
      "persistent": false
    },
    "ufa:dev:clean": {
      "cache": false,
      "persistent": true
    },
    "ufa:dev:seed": {
      "cache": false,
      "persistent": true
    }
  }
}
